<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card">
      <div class="card-body">
        <form action="/tasks/create" method="POST">
          <div class="form-group">
            <input
              type="text"
              name="title"
              placeholder="Write your title"
              class="form-control"
              autofocus
            />
            <div class="form-group">
              <input
                type="text"
                name="description"
                placeholder="Write description"
                class="form-control"
              />
            </div>
            <button
              type="submit"
              class="form-control btn btn-success btn-block"
            >Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>